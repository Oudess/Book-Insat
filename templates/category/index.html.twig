{% extends 'base.html.twig' %}

{% block title %}Categories - Book'Insat{% endblock %}

{% block body %}
    <h1 class="mb-4">Book Categories</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for category in categories %}
            <div class="col">
                <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="text-decoration-none">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="h5 card-title text-primary">{{ category.name }}</h2>
                            <p class="card-text text-muted mb-0">
                                <i class="fas fa-book me-2"></i>{{ category.books|length }} books
                            </p>
                        </div>
                        <div class="card-footer bg-light">
                            <small class="text-muted">View Books <i class="fas fa-arrow-right ms-1"></i></small>
                        </div>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    No categories found.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 